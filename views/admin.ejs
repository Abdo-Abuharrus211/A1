<%- include ('partials/header') %>

    <h1>This is the <%= title %>
    </h1>
    <button class="btn btn-outline-dark" type="button" onclick="location.href='/members'" style="margin: 2%;">Back to Members</button>
    <div class="users-box container-fluid">
        <ul>
            <%for (let i=0; i < users.length; i++) {%>
                <div class="row">
                    <div class="col-lg-9">
                        <h5>username:<%= users[i].username %>
                        </h5>
                        <p>email:<%= users[i].email%>
                        </p>
                        <p>Role: <%= users[i].type %>
                        </p>
                    </div>
                    <div class="col-lg-3 md-0">
                        <form action="/admin/promote?id=<%= users[i].id %>" method="POST">
                            <button class="btn btn-success promo-btn" type="submit">Promote</button>
                        </form>

                        <form action="/admin/demote?id=<%= users[i].id %>" method="POST">
                            <button class="btn btn-danger demo-btn" type="submit">Demote</button>
                        </form>
                    </div>
                    <!-- <button type="button" onclick="location.href='/admin/<%= users[i].id %>'">Edit</button>
                    <button type="button" onclick="location.href='/admin/delete/<%= users[i].id %>'">Delete</button> -->

                    <hr>
                </div>
                <% } %>
        </ul>
    </div>

    <%- include ('partials/footer') %>